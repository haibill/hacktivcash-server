{{!< layout }}
<div class="container">
  <h1 class="jumbotron-heading">New Item</h1>
  <form action="/save" method="post">
    <div class="form-group">
      <label for="">Image</label>
      <input type="text" name="image" class="form-control">
    </div>
    <div class="form-group">
      <label for="">Description</label>
      <textarea name="description" class="form-control"></textarea>
    </div>
    <div class="form-group"><button class="btn btn-primary">Save</button></div>
  </form>
</div>

<div class="album text-muted">
  <div class="container">

    <div class="row">
      {{#each items}}
        <div class="card">
          <img class="img-fluid" src="{{image}}" alt="Card image cap">
          <p class="card-text">{{description}}</p>
          <div class="text-center">
            <a href="/detail/{{ id }}" class="btn btn-warning">Lihat</a>
            <a href="#" class="btn btn-secondary">Masukkan ke keranjang</a>
          </div>
        </div>
      {{/each}}
      <! -- END of Cards-->
    </div>

  </div>
</div>

